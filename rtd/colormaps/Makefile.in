# 	Makefile for RTD colormaps directory
# ------------------------------------------------------------------------
FILES        = *.lasc *.iasc
TARGET       = ../src/colormaps.C
srcdir	     = @srcdir@


# generate a C file inclulding static versions of all of the colormap files
# in this directory
do_all:
	echo "tclsh$(TCL_VERSION) colormaps.tcl > $(TARGET)"
	tclsh$(TCL_VERSION) colormaps.tcl > $(TARGET)

install-top:
	@if test -d $(RTD_DIR)/colormaps ; then \
	    : ; \
	else \
	    mkdir $(RTD_DIR)/colormaps ; \
	fi

install-files: install-top
	$(AT)for i in $(srcdir)/$(FILES) ; do \
	    $(INSTALL_DATA) $$i $(RTD_DIR)/colormaps ; \
	done 

vlt-install-files: install-top
	@gunzip -cd colormap.taz | tar xvf - 
	@set -x; for i in $(srcdir)/$(FILES) ; do \
	    $(INSTALL_DATA) $$i $(RTD_DIR)/colormaps ; \
	done 

# install: install-files

# Note: the default colormap files are now compiled in to the binary...
install: install-top

vlt-distclean: distclean
	$(RM) *.lasc *.iasc *.prg *.fmt

include ../../makefile.mk

