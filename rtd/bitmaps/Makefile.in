# ------------------------------------------------------------------------
# 	Makefile for RTD bitmaps directory
# ------------------------------------------------------------------------
FILES        = *.xbm
TARGET       = ../src/rtd_bitmaps.C


do_all: $(TARGET)

# generate a C file that creates all of the bitmap files
# in this directory and installs them for Tk access by basename
$(TARGET): $(FILES) bitmaps.tcl
	tclsh@TCL_VERSION@ bitmaps.tcl > $(TARGET)

# bitmaps don't have to be installed since they are compiled in
do_install: 

include ../../makefile.mk

