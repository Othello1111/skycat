CC           	= @CC@
CXX           	= @CXX@
CFLAGS  	= @CDEBUGFLAGS@
TOPDIR      	= @DESTDIR@
LIBDIR      	= @LIBDIR@
DEPEND_TARGET	= @DEPEND_TARGET@

# sources: note: the .c files were taken from the "press" archive module
SRCS 		=  Compress.C \
		   digitize.c gzip.c gzip_inflate.c gzip_util.c h_decomp.c \
		   h_press.c hcomp.c hinv.c hsmooth.c htrans.c local_press.c \
		   pr_msg.c press.c ulda.c undigitize.c ux_press.c msg.c none.c


OBJS 		=  Compress.o \
		   digitize.o gzip.o gzip_inflate.o gzip_util.o h_decomp.o \
		   h_press.o hcomp.o hinv.o hsmooth.o htrans.o local_press.o \
		   pr_msg.o press.o ulda.o undigitize.o ux_press.o msg.o none.o

libname  	= ../lib/libcompress.a

# Take include files from the build dirs, if present
BUILD_INCLUDES  = @TCLUTIL_BUILD_INCLUDES@

INCLUDES	= -I../include \
		  $(BUILD_INCLUDES) \
		  -I$(TOPDIR)/include/tclutil

CC_SWITCHES	= @SHLIB_CFLAGS@ $(CFLAGS) $(DEFINES) $(INCLUDES)
DEPEND_FLAGS    = $(CC_SWITCHES) @CXX_INCLUDE@ @CXX_DEPEND_FLAGS@
INSTALL  	= @INSTALL@
INSTALL_DATA  	= @INSTALL_DATA@
RANLIB   	= @RANLIB@
SHELL    	= /bin/sh
AR       	= ar rc
RM       	= rm -f

all: dirs $(libname) 

All:
	cd ../..; $(MAKE)

# recompile if configure is run, since -D flags might have changed
$(OBJS): ../../config.status

$(libname): $(OBJS)
	$(RM) $@
	$(AR) $@ $(OBJS)
	$(RANLIB) $@

install: 

dirs:
	test -d ../lib || mkdir ../lib

clean:
	$(RM) $(OBJS) $(libname) *\~ "#"*

distclean: clean depclean
	rm -f Makefile	

.SUFFIXES: .C
.c.o:
	$(CC) -c $(CC_SWITCHES) $<

.C.o:
	$(CXX) -c $(CC_SWITCHES) $<

man:

include @SRC_ROOT@/makefile.mk
include ../../depend.mk
