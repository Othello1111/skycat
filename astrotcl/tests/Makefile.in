CC           	= @CC@
CXX           	= @CXX@
CFLAGS  	= @CXXDEBUGFLAGS@
TOPDIR      	= @DESTDIR@
LIBDIR      	= @LIBDIR@
TCLUTIL_LIB     = @TCLUTIL_LIB_STATIC@
DEPEND_TARGET	= @DEPEND_TARGET@


# ------------------------------------------------------------------------


SRCS 		=  tHMS.C tWorldCoords.C tImageCoords.C tWorldOrImageCoords.C

OBJS 		=  tHMS.o tWorldCoords.o tImageCoords.o tWorldOrImageCoords.o

PROGS 		=  tHMS tWorldCoords tImageCoords tWorldOrImageCoords

BUILD_INCLUDES  = @TCLUTIL_BUILD_INCLUDES@

INCLUDES	= -I../include \
		  $(BUILD_INCLUDES) \
		  -I$(TOPDIR)/include/tclutil

CC_SWITCHES	= $(CFLAGS) $(DEFINES) $(INCLUDES)

LIBRARIES       = ../lib/libwcslib.a \
		  $(TCLUTIL_LIB)

DEPEND_FLAGS    = $(CC_SWITCHES) @CXX_INCLUDE@
SHELL    	= /bin/sh
AR       	= ar rc
RM       	= rm -f
EXTRA_LIBS      = @LIBS@

all: 

test: $(PROGS)

lib:
	@cd ../src; $(MAKE)

All:
	cd ../..; $(MAKE); $(MAKE)

install:

clean: 
	$(RM) $(PROGS) $(OBJS) *.result *\~ "#"*

distclean: clean
	echo > make.dep
	rm -f Makefile	

# accept all test results
allok:
	for i in *.result; do cp $$i `basename $$i .result`.ok; done

tHMS: tHMS.o $(LIBRARIES)
	$(CXX) $(CC_SWITCHES) -o $@ $@.o $(LIBRARIES) $(EXTRA_LIBS)	
	-$@ > $@.result
	-@if cmp $@.result $@.ok; \
	 then echo "$@: PASSED" ; \
	 else echo "*** $@: TEST FAILED: see $@.result"; \
	 fi

tWorldCoords: tWorldCoords.o $(LIBRARIES)
	$(CXX) $(CC_SWITCHES) -o $@ $@.o $(LIBRARIES) $(EXTRA_LIBS)	
	-$@ > $@.result
	-@if cmp $@.result $@.ok; \
	 then echo "$@: PASSED" ; \
	 else echo "*** $@: TEST FAILED: see $@.result"; \
	 fi

tImageCoords: tImageCoords.o $(LIBRARIES)
